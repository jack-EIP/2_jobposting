<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>Employer Dashboard</title>

  <!-- Custom fonts for this template-->
  <link href="../postingJob/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
  <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

  <!-- Custom styles for this template-->
  <link href="../postingJob/css/sb-admin-2.min.css" rel="stylesheet">
  <link href="../postingJob/css/style.css" rel="stylesheet">
</head>

<body>
  <div>
  <%- include('headerdb'); -%>
  </div>
  <div>
  <div class="container posting-content border rounded">
    <form action="/employerdbPage/postingJob/review" method="POST" class="posting-form" id="posting-form">
      <div class="container-fluid row posting-title">
        <div class="col-1">
          <i class="fa fa-briefcase fa-3x text-gray-900"></i>
        </div>
        <div class="col-11">
          <p class="h2">Mô tả công việc</p>
        </div>
      </div>
      <div class="form-group row">
        <div align="right" class="col-3">
          <label for="Chucdanh">Chức danh</label>
        </div>
        <div class="col-8">
          <input type="text" class="form-control" name="Chucdanh" id="Chucdanh" placeholder="Vd. Fresher Embedded Software Engineer"/>
        </div>
      </div>
      <div class="form-group row">
        <div align="right" class="col-3">
          <label for="">Cấp bậc</label>
        </div>
        <div class="col-8">
          <select name="Capbac" class="form-control" id="exampleFormControlSelect1">
            <option selected>Vui lòng chọn một cấp bậc...</option>
            <option>Mới tốt nghiệp</option>
            <option>Nhân viên</option>
            <option>Trưởng phòng</option>
            <option>Giám đốc và cấp cao hơn</option>
          </select>
        </div>
      </div>
      <div class="form-group row">
        <div align="right" class="col-3">
          <label for="Nganhnge">Ngành nghề</label>
        </div>
        <div class="col-8">
          <input type="text" class="form-control" name="Nganhnge" id="Nganhnge" placeholder="Vd: Information Technolody"/>
        </div>
      </div>
      <div class="form-group row">
        <div align="right" class="col-3">
          <label for="Mota">Mô tả</label>
        </div>
        <div class="col-8">
          <textarea type="text" class="form-control" name="Mota" id="Mota" rows="5"></textarea>
        </div>
      </div>
      <div class="form-group row">
        <div align="right" class="col-3">
          <label for="Yeucaucongviec">Yêu cầu công việc</label>
        </div>
        <div class="col-8">
          <textarea type="text" class="form-control" name="Yeucaucongviec" id="Yeucaucongviec" rows="5"></textarea>
        </div>
      </div>
      <div class="form-group row">
        <div align="right" class="col-3">
          <label for="Mucluong">Mức lương</label>
        </div>
        <div class="col-8 row">
          <div class="col">
            <input type="number" class="form-control" name="Luongmin" id="Mucluong" placeholder="Vui lòng nhập mức lương thấp nhất"/>
          </div>
          <div class="col">
            <input type="number" class="form-control" name="Luongmax" id="Mucluong" placeholder="Vui lòng nhập mức lương cao nhất"/>
          </div>
        </div>
      </div>
      <div class="form-group row">
        <div align="right" class="col-3">
          <label for="Noilamviec">Nơi làm việc</label>
        </div>
        <div class="col-8">
          <select name="Noilamviec" class="form-control" id="Noilamviec">
            <option selected>Vui lòng chọn nơi làm việc...</option>
            <option>Thành phố Hổ Chí Minh</option>
            <option>Đồng Nai</option>
            <option>Đà Nẵng</option>
            <option>Hà Nội</option>
          </select>
        </div>
      </div>
      <div align="center" class="form-group form-button">
          <input class="btn btn-primary" type="submit" name="signin" id="signin" class="form-submit" value="Xác nhận"/>
      </div>
    </form>
  </div>





       <!-- Bootstrap core JavaScript-->
       <script src="../postingJob/vendor/jquery/jquery.min.js"></script>
       <script src="../postingJob/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
     
       <!-- Core plugin JavaScript-->
       <script src="../postingJob/vendor/jquery-easing/jquery.easing.min.js"></script>
     
       <!-- Custom scripts for all pages-->
       <script src=../postingJob/js/sb-admin-2.min.js"></script>
     </body>
</body>