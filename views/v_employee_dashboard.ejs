<body>
  <div>
  <%- include('headerdb'); -%>
  </div>


  <div style="margin-top: 50px;" class="container">
    <% if (applicant.length == 0) { %>
        <div align="center" class="alert alert-danger" role="alert">
            Không tìm thấy công ty
        </div>
    <% } else { %>
    <table class="table">
        <thead>
          <tr>
            <th scope="col">Number</th>
            <th scope="col">Job Name</th>
            <th scope="col">Company Name</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
            <% for(var i=0; i < applicant.length; i++) {%>
          <tr>
            <th scope="row"><%= i+1 %> </th>
            <td>
                <a style="text-decoration: underline; text-decoration-color: blue;" href="/job_details/<%= applicant[i].id %>"><%= applicant[i].Chucdanh %></a>
            </td>
            <td>
                <%= applicant[i].company.Ten %>
            </td>
            <td>
                <form method="post" action="/employee_dashboard/remove/<%= applicant[i].id%>">
                    <button class="btn btn-danger" type="submit">Remove</button>
                </form>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
      <% } %>
  </div>
    




     <!-- Bootstrap core JavaScript-->
